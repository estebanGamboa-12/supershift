# Configuración base de datos MariaDB/MySQL
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_USER=usuario
DATABASE_PASSWORD=contraseña
DATABASE_NAME=supershift

# Calendario por defecto para las operaciones de rotación
DEFAULT_CALENDAR_ID=2

# Días a generar cuando se crea una rotación
ROTATION_HORIZON_DAYS=60

# Configuración pública de Supabase (interfaz web)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
